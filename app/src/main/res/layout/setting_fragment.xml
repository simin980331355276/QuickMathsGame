<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey"
    tools:context=".setting"
    android:id="@+id/setting_frame">

    <ImageButton
        android:id="@+id/imgBtn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="325dp"
        android:background="@drawable/button_style"
        app:layout_constraintBottom_toTopOf="@+id/Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_close_s" />

    <ImageButton
        android:id="@+id/imgBtn_restart"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="225dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/button_style_setting"
        app:layout_constraintBottom_toTopOf="@+id/imgBtn_sound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002"
        app:srcCompat="@drawable/icon_restart_s"/>

    <ImageButton
        android:id="@+id/imgBtn_resume"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/button_style_setting"
        app:layout_constraintBottom_toTopOf="@+id/imgBtn_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357"
        app:srcCompat="@drawable/icon_resume_s" />

    <ImageButton
        android:id="@+id/imgBtn_sound"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/button_style_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_sound_s"/>

    <ImageButton
        android:id="@+id/imgBtn_music"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/button_style_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_music_s" />

</androidx.constraintlayout.widget.ConstraintLayout>