<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AppUI.EModeActivity">


    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="85dp"
        android:layout_height="46dp"
        android:text="@string/countdown"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:fontFamily="@font/baloo"
        app:layout_constraintEnd_toStartOf="@+id/imgBtn_setting"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintLeft_toLeftOf="@id/imgBtn_setting"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <!-- Easy -->

    <TextView
        android:id="@+id/easy"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:text="@string/easy"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:typeface="normal"
        app:fontFamily="sans-serif-medium"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="52dp" />

    <ImageButton
            android:id="@+id/imgBtn_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="325dp"
            android:background="@drawable/button_style"
            app:layout_constraintBottom_toTopOf="@+id/Logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/icon_setting_s" />


</androidx.constraintlayout.widget.ConstraintLayout>